<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elec390.teamb.ecg.WorkoutActivity"
    tools:showIn="@layout/app_bar_workout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_weight="7.7"
            android:orientation="horizontal">

            <Button
                android:id="@+id/commentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comment" />

            <Button
                android:id="@+id/stopWorkoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop" />

            <Button
                android:id="@+id/pauseWorkoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pause" />

            <Button
                android:id="@+id/beginWorkoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Begin" />

        </LinearLayout>

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="0:00:00"
            android:textAllCaps="false"
            android:textSize="36sp"
            tools:layout_editor_absoluteY="511dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/realtimeGraph"
            android:layout_width="369dp"
            android:layout_height="392dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:paddingTop="10dp"
            tools:layout_editor_absoluteY="511dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
